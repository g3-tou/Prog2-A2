<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox  alignment="CENTER" styleClass="background" prefHeight="450.0" prefWidth="350.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="controller.SeasonController">
    <ImageView fitHeight="450.0" fitWidth="350.0" layoutX="100.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
        <image>
        <Image url="/view/NBA_Back.jpg" /> 
        </image>
    </ImageView>
    <VBox alignment="center" spacing="20">
        <Button fx:id="roundButton" prefWidth="300" text="Round" style="button" onAction="#viewRounds"/>
        <Button fx:id="currentButton" prefWidth="300" text="Current" style="button" onAction="#viewCurrentRound"/>
        <Button fx:id="gameButton" prefWidth="300" text="Game" style="button" onAction="#viewGames"/>
        <Button fx:id="resultButton" prefWidth="300" text="Result" style="button" onAction="#viewResults"/>
        <Button fx:id="closeButton" prefWidth="300" text="Close" style="button" onAction="#close"/>
    </VBox>   
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
</VBox>
